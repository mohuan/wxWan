/* components/template-page/template-page.wxss */
/* 加载失败 */

.state-error {
  position: relative;
  display: flex;
  padding-top: 150rpx;
  justify-content: center;
  flex-direction: column;
  text-align: center;
}

.state-error .image-error {
  position: relative;
  width: 290rpx;
  height: 290rpx;
  margin: 0 auto;
}

.state-error .state-error-info {
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 33rpx;
  padding-top: 10rpx;
}

.state-error .refresh-button {
  position: relative;
  padding-top: 80rpx;
  width: 260rpx;
  height: 80rpx;
  background: rgba(83,147,136,1);
  border-radius: 4rpx;
  border: 1rpx solid rgba(83,147,136,1);
  line-height: 80rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  padding: 0rpx;
  box-shadow: none;
}

/* 数据为空 */

.state-empty {
  position: relative;
  display: flex;
  justify-content: center;
  padding-top: 150rpx;
  padding-bottom: 50rpx;
  flex-direction: column;
  text-align: center;
}

.state-empty .image-empty {
  position: relative;
  width: 233rpx;
  height: 263rpx;
  margin: 0 auto;
}

.state-empty .state-empty-info {
  position: relative;
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 33rpx;
  text-align: center;
}

/* loading */
.state-load{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  text-align: center;
}

.state-load .image-load{
  position: relative;
  width: 200rpx;
  height: 200rpx;
  padding-top: 200rpx;
}

.state-load .state-load-info{
  position: relative;
  height: 33rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 33rpx;
  text-align: center;
  padding-top: 30rpx;
}
button::after{
  border: none;
}
button{
  background:rgba(83,147,136,1);
}