}

.role-student {
  margin-top: 60rpx;
  width: 630rpx;
  height: 280rpx;
  background-image: url("https://skyworth-cloud-image.oss-cn-beijing.aliyuncs.com/wxapp/login/login-parent-bg.png");
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  background-position: top left;
  background-size: 100%;
}

.role-text text {
  font-size: 40rpx;
  font-family: PingFangSC-Medium;
  font-weight: 700;
  color: rgba(255, 255, 255, 1);
  margin-left: 58rpx;
  line-height: 280rpx;
}

.role-text image {
  width: 200rpx;
  height: 200rpx;
  margin: 40rpx 0 40rpx 40rpx;
}

.login-role-title {
  position: relative;
  height: 42rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(83,147,136,1);
  line-height: 42rpx;
}
