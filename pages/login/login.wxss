  margin-top: 171rpx;
  margin-bottom: 171rpx;
  margin-left: 140rpx;
}

.role-teacher {
  margin-top: 171rpx;
  width: 630rpx;
  height: 280rpx;
  background-image: url("https://skyworth-cloud-image.oss-cn-beijing.aliyuncs.com/wxapp/login/login-teacher-bg.png");
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  background-position: top left;
