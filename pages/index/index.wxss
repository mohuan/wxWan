/**index.wxss**/

.home-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.slide-image {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.page-section {
  position: relative;
  margin: 0;
  padding: 0;
  width: 100%;
  height: 300rpx;
}

.page-section swiper{
  height: 300rpx;
}

.list {
  position: relative;
  display: flex;
  flex-direction: column;
}

.list .list-item {
  position: relative;
  background-color: #ffffff;
  padding: 10rpx 30rpx;
  border-bottom: 1px solid rgba(230,230,230,1);
}

.list .list-item .list-item-title {
  position: relative;
  height: 42rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 700;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.list .list-item .list-item-content {
  position: relative;
  height: 42rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 42rpx;
  display: flex;
  justify-content: flex-start;
  padding-top: 10rpx;
}

.list-item-content .lic-item {
  position: relative;
  display: flex;
  width: 230rpx
}

.list-item-content .lic-item .lic-item-author {
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  width: 60rpx;
}

.list-item-content .lic-item .lic-item-name {
  position: relative;
  margin-left: 10rpx;
}
