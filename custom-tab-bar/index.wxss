/* custom-tab-bar/index.wxss */

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  height: 98rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx -4rpx 4rpx 0rpx rgba(219, 219, 219, 0.24);
  z-index: 999999;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item cover-image {
  width: 54rpx;
  height: 54rpx;
}

.tab-bar-item cover-view {
  margin-top: 7rpx;
  height: 28rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color:rgba(189,190,192,1);
  line-height: 28rpx;
}

.tab-bar-item .active {
  color:rgba(0,137,255,1);
}
